<!-- 长表格样式 datatable table table-bordered table-striped -->
<div class="span6">
<table class="table table-bordered table-striped">
  <thead>
  <tr>
     <th style="width:30%">{{t license.users.licenseVersion}}</th>
     <th style="width:30%">{{t license.users.licenseDate}}</th>
     <th style="width:25%">{{t license.users.licenseNodes}}</th>
     <th style="width:15%">{{t common.operations}}</th>
  </tr>
  </thead>
  <tbody>
    <tr>
  	  <td id="licenseVersion"></td>
  	  <td id="licenseDate"></td>
  	  <td id="licenseNodes"></td>
  	  <td>
        <a href="#" {{action deleteLicense}}>{{t admin.users.delete}}</a> <!-- target="App.router.mainLicenseController" -->
      </td>
	</tr>
  </tbody>
</table>
</div>
  <div class="span2" id="addOperate">
    <button class="btn" {{action addLicense}}> 
      <i class="icon-plus"></i>{{t license.users.addButton}}
    </button>
  </div>
  <div class="span2" id="updateOperate"  style='display:none;'>
    <button class="btn" {{action updateLicense}}> 
      <i class="icon-plus"></i>{{t license.users.updateButton}}
    </button>
  </div>
  